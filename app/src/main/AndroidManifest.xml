<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cs.dawson.dawsonelectriccurrents">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:theme="@style/weather">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MenuActivity"
            android:label="Menu" />


        <activity android:name=".AboutActivity"
                  android:theme="@style/weather"/>

        <activity android:name=".SettingsActivity"
                  android:theme="@style/weather"/>

        <activity android:name=".cancelled.CancelledActivity"
                  android:theme="@style/weather"/>

        <activity android:name=".cancelled.ShowCancelActivity"
                  android:theme="@style/weather"/>

        <activity android:name=".FindTeacherActivity"
                  android:theme="@style/weather"/>

        <activity android:name=".ChooseTeacherActivity"
                  android:theme="@style/weather"
                  android:configChanges="orientation|screenSize|keyboardHidden"/>

        <activity android:name=".notes.NotesActivity"
                  android:theme="@style/weather"/>

        <activity android:name=".notes.ItemNoteActivity"
                  android:theme="@style/weather"/>

        <activity android:name=".CalendarActivity"
                  android:theme="@style/weather"/>

        <activity android:name=".WeatherActivity"
                  android:theme="@style/weather"/>

        <activity android:name=".FindFriendActivity"
                  android:theme="@style/weather" />

        <activity android:name=".AcademicCalendarActivity"
                  android:configChanges="orientation|screenSize|keyboardHidden"
                  android:theme="@style/weather"/>

        <activity android:name=".FindFreeFriends"
                  android:theme="@style/weatherCenter"/>

        <activity android:name=".FiveDayForecastActivity"
                  android:theme="@style/weather" />

        <activity android:name=".TeacherContactActivity"
                  android:theme="@style/weather"/>

        <activity android:name=".FindFriendCourseActivity"
                  android:theme="@style/weather" />

        <activity android:name=".FIndBreakActivity"
                  android:theme="@style/weather"/>

        <activity android:name=".cancelled.ShowCancelledFriends"
                  android:theme="@style/weather" />

    </application>

</manifest>